<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="3">Tweet</th>      
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
    	<tr>
        <td colspan="3">
          <u><p>Tweeted by <%= link_to "#{tweet.user.profile.first_name}", profile_path(tweet.user.profile, tag: 'Other') %></p></u>
        </td>
      </tr>
      <tr>
        <td colspan="3">
        	<div class="row">
					  <div class="col-md-10 col-md-offset-1">
					    <div class="row">
					      <div class="col-md-4">
					        <%= image_tag(tweet.attachment_url, size: "80x65", class: "img-rounded") unless tweet.attachment_url.nil? %> 
					      </div>
					      <div class="col-md-6">
					        <%= link_to "#{raw tweet.message}", tweet_path(tweet) %>
					      </div>
					    </div>
					  </div>
					</div>
        </td>       
      </tr>
    <% end %>
  </tbody>
</table>

 
