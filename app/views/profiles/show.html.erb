<script type="text/javascript">
  function followFunction(user) {
    $.ajax({
      url: "<%= follow_following_index_path%>",
      data: {"following_user_id": user},
      success: function(data){
        $("#follow-unfollow_id_" + user).html('<div class= "t-pointer btn btn-primary" onclick="unFollowFunction(' + user + ')">Unfollow</div>')
      }
    });
  }

  function unFollowFunction(user) {
    $.ajax({
      url: "<%= unfollow_following_index_path%>",
      data: {"following_user_id": user},
      success: function(data){
        $("#follow-unfollow_id_" + user).html('<div class= "t-pointer btn btn-primary" onclick="followFunction(' + user + ')">Follow</div>')
      }
    });
  }
</script>


<div class="row">  
  <div class="twPc-div">
    <a class="twPc-bg twPc-block"></a>

    <div>
      <div class="twPc-button" id="follow-unfollow_id_<%= @profile.user.id%>">
        <% unless @following_user.id == current_user.id %>
          <% if is_following(@following_user.id) %>
            <div class= "t-pointer btn btn-primary" onclick="followFunction(<%= @following_user.id %>)">Follow</div>
          <% else %>
            <div class= "t-pointer btn btn-primary" onclick="unFollowFunction(<%= @following_user.id %>)">Following</div>
          <% end %>
        <% end %>         
      </div><br><br>

      <a title="<%= @profile.first_name %>" href="#" class="twPc-avatarLink">
        <img alt="<%= @profile.first_name %>" src="<%= @profile.profile_image_url%>" class="twPc-avatarImg">
      </a>

      <div class="twPc-divUser">
        <div class="twPc-divName">
          <a href="#"><%= @profile.first_name.titleize + " " + @profile.last_name.titleize %></a>
        </div>
        <span>
          <a href="#">@<span><%= @profile.first_name %></span></a>
        </span>
      </div><br/>

      <div class="twPc-divStats">
        <ul class="twPc-Arrange">
          <li class="twPc-ArrangeSizeFit">
            <a href="#">
              <span class="twPc-StatLabel twPc-block">Tweets</span>
              <span class="twPc-StatValue"><%= @tweets.size %></span>
            </a>
          </li>
          <li class="twPc-ArrangeSizeFit">
            <a href="<%= following_list_following_index_path %>" title="885 Following">
              <span class="twPc-StatLabel twPc-block">Following</span>
              <span class="twPc-StatValue"><%= "#{@following_size}" %></span>
